{
  "name": "hyperwave",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:native": "turbo -F native dev",
    "dev:webapp": "turbo -F webapp dev",
    "dev:server": "turbo -F @hyperwave/backend dev",
    "dev:setup": "turbo -F @hyperwave/backend setup",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "update-deps": "pnpm dlx taze -r -w",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "test": "turbo test"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@tanstack/eslint-plugin-router": "^1.120.17",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "react-markdown": "^10.1.0",
    "rehype-pretty-code": "^0.14.1",
    "remark-gfm": "^4.0.1",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@convex-dev/eslint-plugin": "0.0.1-alpha.4"
  },
  "pnpm": {
    "overrides": {
      "@convex-dev/agent": "^0.1.9"
    }
  }
}
